<?xml version="1.0"?>
<openerp>
    <data>
         <record id="crm.action_crm_lead2opportunity_partner" model="ir.actions.act_window">
            <field name="name">Convert to Customer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.lead2opportunity.partner</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="crm.view_crm_lead2opportunity_partner"/>
            <field name="target">new</field>
        </record>

 		<record model="ir.ui.view" id="crm_case_form_view_leads_inherit">
            <field name="name">CRM - Leads Form Inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//form/header/button[@string='Convert to Opportunity']" position="attributes">
						<attribute name="string"> Convert to Customer</attribute>
						<attribute name="help"> Convert to Customer</attribute>
						<attribute name="states">draft</attribute>
                    </xpath>
                    <xpath expr="//form/header/button[@name='case_cancel']" position="attributes">
						<attribute name="invisible">True</attribute>
                    </xpath>
                </data>
            </field>
        </record>

        <record model="ir.ui.view" id="view_crm_make_sale_inherit">
            <field name="name">crm.make.sale.form.inherit</field>
            <field name="model">crm.make.sale</field>
            <field name="inherit_id" ref="sale_crm.view_crm_make_sale"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='close']" position="attributes">
						<attribute name="invisible">True</attribute>
                    </xpath>
                </data>
            </field>
        </record>

		<record model="ir.ui.view" id="view_crm_lead2opportunity_partner_inherit">
            <field name="name">crm.lead2opportunity.partner.form Inherit</field>
            <field name="model">crm.lead2opportunity.partner</field>
            <field name="inherit_id" ref="crm.view_crm_lead2opportunity_partner"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//form/group[@name='name']" position="attributes">
						<attribute name="invisible">True</attribute>
                    </xpath>
                    <xpath expr="//form/group[@string='Opportunities']" position="attributes">
						<attribute name="string">Customer</attribute>
                    </xpath>
                    <xpath expr="//form/footer/button[@name='action_apply']" position="attributes">
						<attribute name="string">Convert</attribute>
                    </xpath>
                </data>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_crm.crm_case_form_view_oppor">
            <field name="name">CRM - Opportunities - Quote Inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/header/button[@name='case_reset']" position="after">
                        <button states="pending" string="Create Quotation" name="%(sale_crm.action_crm_make_sale)d" type="action" invisibel='1'/>
                        <button states="open" string="Convert to Quotation" name="%(sale_crm.action_crm_make_sale)d" type="action" class="oe_highlight"/>
                    </xpath>
                </data>
            </field>
        </record>

        <menuitem name="Opportunities" id="crm.menu_crm_opportunities" parent="base.menu_sales" action="crm.crm_case_category_act_oppor11" sequence="3" groups='group_hide_menu'/>

        <menuitem id="base.menu_crm_config_lead" name="Leads"
            parent="base.menu_base_config" sequence="80" groups="base.group_sale_manager"/>

    </data>
</openerp>