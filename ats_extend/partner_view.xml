<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="base_partner_view_inherit" model="ir.ui.view">
			<field name="name">base_partner_view_inherit</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				<xpath expr="//div[@name='buttons']" position="inside">
                    <button type="action"
                        string="Invoices"
                        name="%(account.action_invoice_tree)d"
                        context="{'search_default_partner_id': active_id }"/>
                    <button type="action" string="Open Orders" 
                        name="%(sale.action_orders)d" 
                        context="{'search_default_partner_id': active_id}" />
                </xpath>
                <xpath expr="//notebook" position="inside">
                        <page string='Shipping Addresses'> 
						</page>
						<page string='RMA'> 
						</page>
						<page string='Sale History'>
							<field name='sale_order_ids'/>
						</page>
				</xpath>
             </field>
		</record>
	</data>
</openerp>