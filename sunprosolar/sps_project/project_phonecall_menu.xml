<?xml version="1.0"?>
<openerp>
<data>

<!-- PHONE CALLS (menu)  -->

    <record model="ir.actions.act_window" id="project_case_categ_phone0">
        <field name="name">Phone Calls</field>
        <field name="res_model">project.phonecall</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,calendar</field>
        <field name="view_id" ref="project_phone_tree_view"/>
        <field name="context">{"search_default_user_id":uid}</field>
        <field name="search_view_id" ref="sps_project.view_project_case_phonecalls_filter"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_project_tag_tree_phone0">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="project_phone_tree_view"/>
        <field name="act_window_id" ref="project_case_categ_phone0"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_project_tag_calendar_phone0">
        <field name="sequence" eval="2"/>
        <field name="view_mode">calendar</field>
        <field name="view_id" ref="project_case_phone_calendar_view"/>
        <field name="act_window_id" ref="project_case_categ_phone0"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_project_tag_form_phone0">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="project_phone_form_view"/>
        <field name="act_window_id" ref="project_case_categ_phone0"/>
    </record>

     <menuitem name="Phone Calls" id="menu_project_case_phone"
        parent="base.menu_definitions" sequence="4" />

    <record model="ir.actions.act_window" id="project_case_categ_phone_incoming0">
        <field name="name">Logged Calls</field>
        <field name="res_model">project.phonecall</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,calendar</field>
        <field name="view_id" ref="project_case_inbound_phone_tree_view"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="sps_project.view_project_case_phonecalls_filter"/>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to log the summary of a phone call. 
          </p><p>
            OpenERP allows you to log inbound calls on the fly to track the
            history of the communication with a customer or to inform another
            team member.
          </p><p>
            In order to follow up on the call, you can trigger a request for
            another call, a meeting or an opportunity.
          </p>
        </field>
    </record>

    <record model="ir.actions.act_window.view" id="action_project_tag_calendar_phone_incoming0">
        <field name="sequence" eval="2"/>
        <field name="view_mode">calendar</field>
        <field name="view_id" ref="project_case_phone_calendar_view"/>
        <field name="act_window_id" ref="project_case_categ_phone_incoming0"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_project_tag_form_phone_incoming0">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="project_phone_form_view"/>
        <field name="act_window_id" ref="project_case_categ_phone_incoming0"/>
    </record>

    <menuitem name="Logged Calls" id="menu_project_case_phone_inbound"
        parent="sps_project.menu_project_case_phone"
        action="project_case_categ_phone_incoming0" />

    <record model="ir.actions.act_window" id="project_case_categ_phone_outgoing0">
        <field name="name">Scheduled Calls</field>
        <field name="res_model">project.phonecall</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,calendar</field>
        <field name="view_id" ref="project_phone_tree_view"/>
        <field name="domain">[('state','!=','done')]</field>
        <field name="context" eval="'{\'default_state\':\'open\'}'"/>
        <field name="search_view_id" ref="view_project_case_phonecalls_filter"/>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to schedule a call 
          </p><p>
            OpenERP allows you to easily define all the calls to be done
            by your sales team and follow up based on their summary.
          </p><p>  
            You can use the import feature to massively import a new list of
            prospects to qualify.
          </p>
        </field>
    </record>

    <record model="ir.actions.act_window.view" id="action_project_tag_tree_phone_outgoing0">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="project_phone_tree_view"/>
        <field name="act_window_id" ref="project_case_categ_phone_outgoing0"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_project_tag_calendar_phone_outgoing0">
        <field name="sequence" eval="2"/>
        <field name="view_mode">calendar</field>
        <field name="view_id" ref="project_case_phone_calendar_view"/>
        <field name="act_window_id" ref="project_case_categ_phone_outgoing0"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_project_tag_form_phone_outgoing0">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="project_phone_form_view"/>
        <field name="act_window_id" ref="project_case_categ_phone_outgoing0"/>
    </record>

    <menuitem name="Scheduled Calls" id="menu_project_case_phone_outbound"
        parent="sps_project.menu_project_case_phone"
        action="project_case_categ_phone_outgoing0" />

</data>
</openerp>
