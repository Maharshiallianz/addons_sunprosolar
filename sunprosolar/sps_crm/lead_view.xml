		<!-- CRM Lead Form View  -->
        <record id="view_sun_crm_lead_form" model="ir.ui.view">
			<field name="name">crm.lead.form</field>
			<field name="model">crm.lead</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
			<field name="arch" type="xml">
						<xpath expr="//form/header/button[1][@string='Convert to Opportunity']" position="before">
								<button name="new_mail_send1" string="Send Mail" type="object" states="draft,open,pending" class="oe_highlight"/>
						</xpath>
						<xpath expr="//notebook/page[@string='Notes']" position="after">
							<page string="Electricity Information">
								<group col="4" colspan="4">
									<field name="acc_no" />
									<field name="meter_no" placeholder="e.g. S06DS123456..."/>
									<field name="bill_average" />
									<field name="bill_total" />
									<field name="rate_plan" />
								</group>					
							</page>	
						</xpath>
			</field>
			</record>
			
