			<!-- Opportunities Form View -->
			<record id="view_sun_crm_opp_form" model="ir.ui.view">
			<field name="name">crm.opp.form</field>
			<field name="model">crm.lead</field>
			<field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
			<field name="arch" type="xml">
						<xpath expr="//form/header/button[3][@string='Send Mail']" position="attributes">
							<attribute name="invisible">1</attribute>
						</xpath>
						<xpath expr="//form/header/button[2][@string='Mark Lost']" position="after">
							<button name="type_change" string="Convert to Lead" type="object"
                            states="draft,open,pending" help="Convert to Lead" />
						</xpath>
						<xpath expr="//form/sheet/group/group[4]/field[@name='categ_ids']" position="after">
								<label for="utility_bill"/>
	                            <div>
	                                <field name="utility_bill"/>
	                            </div>
                                <group  col="2" colspan="2" attrs="{'invisible':[('utility_bill','=',False)]}">
	                                <label for="contract_id"/>
	                                <div>
	                                    <field name="contract_id" attrs="{'invisible':[('utility_bill','=',False)]}"/><newline/>
	                                    <button name="new_mail_send" string="Contract Sign" type="object" icon="gtk-yes"
	                                    	 attrs="{'invisible':[('contract_id','=',False)]}" help=" Click if Customer want to sign the contract." />
	                                </div>
	                            </group>
						</xpath>
						<xpath expr="//notebook/page[@string='Lead']" position="after">
							<page string="Home Information">
									<group col="4" colspan="4">
                                		<field name="home" />
                                    	<field name="quote" />
                                    	<group col="4" colspan="4" attrs="{'invisible':[('quote','=',False)]}">
												<field name="quote_info"/>
										</group>
										<field name="heat_home" />
										<field name="home_sq_foot" /><newline/>
                                    </group>
									<group col="4" colspan="4">
	                                     <field name="roof_type"/>
	                                     <field name="estimate_shade"/>
	                                     <field name="tilt"/>
	                                     <field name="azimuth"/>
                                 	
	                                    <group col="10" colspan="10">
	                                        <field name="age_house_year"/>
	                                        <span class="oe_grey"> Year </span><newline/>
	                                        <span class="oe_grey">  </span>
	                                        <field name="age_house_month" nolabel="1"/>
	                                        <span class="oe_grey"> Month </span>
	                                        <span class="oe_grey">  </span>
	                                        <span class="oe_grey">  </span>
	                                        <span class="oe_grey">  </span>
	                                        <span class="oe_grey">  </span>
	                                        <span class="oe_grey">  </span>
	                                        <span class="oe_grey">  </span>
										</group>
									</group>
							</page>
							<!--
							<page string="Utility Bills">
									 <field name="bill_ids" nolabel="1" colspan="4">
                                <form string="Utility Bills">
                                    <group col="2" >
                                        <field name="description" placeholder="Description About Bill"/>
                                        <field name="bill"/>
                                    </group>
                                </form>
                                <tree string="Certifaicate">
                                    <field name="description"/>
                                </tree>
                            </field>
							</page>	
							-->
						</xpath>
			</field>
			</record>
			
		<!-- Company Quotation Search View  -->
        <record model="ir.ui.view" id="company_quotation_search">
        <field name="name">company_quotation_Search</field>
        <field name="model">company.quotation</field>
        <field name="arch" type="xml">
            <search string="Company Qutation Search">
                <field name="company_name"/>
				<field name="product_ids"/>
				<field name="quote_amount"/>
            </search>
        </field>
        </record>

		<!-- Company Quotation Form View  -->
        <record model="ir.ui.view" id="company_quotation_form">
        <field name="name">company_quotation_Form</field>
        <field name="model">company.quotation</field>
        <field name="arch" type="xml">
            <form string="Company Quotation Form" version="7.0">
                    <sheet>
		                <group col="4" colspan="4">
			                <field name="company_name" required="1"/><newline/>
			                <separator string="Equipments"/>
							<field name="product_ids" nolabel="1" colspan="4" />
							<field name="quote_amount" required="1"/>
						</group>
					</sheet>
            </form>
        </field>
        </record>
        
        
		<!-- Company Quotation Tree View  -->
        <record model="ir.ui.view" id="company_quotation_tree">
        <field name="name">company_quotation_Tree</field>
        <field name="model">company.quotation</field>
        <field name="arch" type="xml">
            <tree string="Company Quotation Tree">
                <field name="company_name"/>
				<field name="product_ids"/>
				<field name="quote_amount"/>
            </tree>
        </field>
        </record>

		<!-- Company Qutation -->
	    <record id="action_company_quotation" model="ir.actions.act_window">
	        <field name="name">Company Quotation Information</field>
	        <field name="res_model">company.quotation</field>
	        <field name="view_type">form</field>
	        <field name="view_mode">tree,form</field>
	    </record>

		<menuitem action="action_company_quotation" id="menu_company_qutation" parent="base.menu_crm_config_lead" 
					string="Company Quotation"  sequence="11"/> 

