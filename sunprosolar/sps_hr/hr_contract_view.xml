<?xml version="1.0"?>
<openerp>
    <data>
		<!-- Contract Form View -->
			<record model="ir.ui.view" id="view_customer_form">
				<field name="name">hr.contract.form</field>
				<field name="model">hr.contract</field>
				<field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
				<field name="arch" type="xml">
					<xpath expr="//field[@name='employee_id']" position="before">
						<field name="contract_id"/>
						<field name="customer"/>
					</xpath>
					<xpath expr="//field[@name='job_id']" position="attributes">
						<attribute name="invisible">1</attribute>
					</xpath>
					<xpath expr="//field[@name='type_id']" position="before">
						<field name="contract_date"/>
						<field name="type_of_finance"/>
						<field name="project_id"/>
					</xpath>
					<xpath expr="//group[@name='salary_and_advantages']" position="attributes">
						<attribute name="string">Contract Amount and Advantages</attribute>
					</xpath>
					<xpath expr="//field[@name='wage']" position="after">
						<field name="deposit"/>
					</xpath>
					<xpath expr="//group[@name='duration_group']" position="attributes">
						<attribute name="invisible">1</attribute>
					</xpath>
					<xpath expr="//field[@name='wage']" position="attributes">
						<attribute name="string">Contract Amount</attribute>
					</xpath>
					<xpath expr="//page[@string='Work Permit']" position="attributes">
						<attribute name="invisible">1</attribute>
					</xpath>
					<xpath expr="//notebook/page[1][@string='Information']" position="after">
							<page string="Equipments">
									 <field name="equipment_ids" nolabel="1" colspan="4">
                                <form string="Equipments">
                                    <group col="2" >
                                        <field name="product_id"/>
                                    </group>
                                </form>
                                <tree string="Equipments" editable="bottom">
                                    <field name="product_id"/>
                                </tree>
                            </field>
							</page>	
						</xpath>
				</field>
			</record>

	<!-- contract Tree View -->
		<record model="ir.ui.view" id="view_customer_tree">
			<field name="name">hr.contract.form</field>
			<field name="model">hr.contract</field>
			<field name="inherit_id" ref="hr_contract.hr_contract_view_tree"/>
			<field name="arch" type="xml">
					<xpath expr="//field[@name='employee_id']" position="attributes">
						<attribute name="invisible">1</attribute>
					</xpath>
					<xpath expr="//field[@name='job_id']" position="attributes">
						<attribute name="invisible">1</attribute>
					</xpath>
					<xpath expr="//field[@name='working_hours']" position="attributes">
						<attribute name="invisible">1</attribute>
					</xpath>
					<xpath expr="//field[@name='date_start']" position="attributes">
						<attribute name="invisible">1</attribute>
					</xpath>
					<xpath expr="//field[@name='date_end']" position="attributes">
						<attribute name="invisible">1</attribute>
					</xpath>
					<field name="name" position="after">
						<field name="contract_id"/>
						<field name="customer"/>
						<field name="contract_date"/>
					</field>
			</field>
		</record>
	</data>
</openerp>